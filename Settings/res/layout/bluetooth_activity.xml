<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity" 
    android:background="@color/white">
	<include 
	    android:id="@+id/action_back"
	    layout="@layout/action_bar_layout"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    />
	<include 
	    android:id="@+id/switch_bar"
	    android:layout_below="@+id/action_back"
	    layout="@layout/switch_bar_layout"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:visibility="gone"
	    />
	<TextView 
	    android:id="@+id/tv_show"
	    android:layout_below="@+id/switch_bar"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:text="开启蓝牙后，您的设备可以与附近的其他蓝牙设备通信。"
	    android:textColor="@color/black"
	    android:padding="20dp"
	    android:textSize="20sp"
	    android:gravity="center"
	    />

	<LinearLayout 
        android:id="@+id/sv_list"
        android:orientation="horizontal"
        android:layout_below="@+id/switch_bar"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none"
        android:layout_above="@+id/ll"
        >
        <LinearLayout 
	        android:orientation="vertical"
	        android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="8"
	        >
	        <LinearLayout 
	            android:orientation="vertical"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:background="@color/gray_deep_white"
	            >
	             <TextView 
	                android:layout_width="fill_parent"
	                android:layout_height="1dp"
	                android:background="@color/black"/>
	            <TextView 
	                android:id="@+id/visible"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:text="可检测到此设备(30s)"
	                android:textSize="13sp"
	                android:textColor="@color/gray"
	                android:padding="5dp"
	                android:background="@drawable/title_gray_shape"
	                />
	        </LinearLayout>
            <TextView 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="未配对列表："
	            android:textSize="15sp"
	            android:textColor="@color/black"
	            android:padding="5dp"
	            />
		    <GridView
	            android:id="@+id/gv_unbond_list"
	            android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
	            android:numColumns="2" 
	            android:horizontalSpacing="5dp"
		        android:verticalSpacing="5dp"
		        android:padding="5dp"
		        android:listSelector="@drawable/block_round_selector"
		       	>
	        </GridView>
		</LinearLayout>
		
        <TextView 
	        android:layout_width="1dp"
	        android:layout_height="fill_parent"
	        android:background="@color/gray_light"
	        android:layout_marginBottom="5dp"
	        />
        
        <LinearLayout 
	        android:orientation="vertical"
	        android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="6"
	        >
	        <TextView 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:text="已配对列表："
	            android:textSize="15sp"
	            android:textColor="@color/black"
	            android:padding="5dp"
	            />
            <ListView
                android:id="@+id/lv_bond_list"
	            android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
	            android:divider="@color/gray_white"
	            android:dividerHeight="0.2dp"
	            android:scrollbars="none"
	            android:paddingTop="5dp"
	            ></ListView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/ll"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
		android:gravity="center"
		android:background="@drawable/top_titlebar_shape"
        >
        <Button 
	        android:id="@+id/btn_scan"
	        android:layout_width="0px"
	        android:layout_height="55dp"
	        android:layout_weight="4"
	        android:text="搜索设备"
	        android:textSize="25sp"
	        android:background="@drawable/block_selector"
	        android:textColor="@color/black"
	        />
        <Button 
	        android:id="@+id/btn_visible"
	        android:layout_width="0px"
	        android:layout_height="55dp"
	        android:layout_weight="1"
	        android:text="检测超时\n设置"
	        android:textSize="15sp"
	        android:background="@drawable/block_selector"
	        android:textColor="@color/black"
	        />
    </LinearLayout>
</RelativeLayout>
