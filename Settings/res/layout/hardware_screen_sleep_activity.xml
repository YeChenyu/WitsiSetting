<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TextView
        android:id="@+id/title_security"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="屏幕休眠测试"
        android:textColor="#0000ff"
        android:textSize="35sp" 
        android:padding="10dp"
        />

    <TextView
        android:id="@+id/security_line1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/title_security"
        android:background="#ff0000" />

    <Button
        android:id="@+id/get_status_btn"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:onClick="getStatusBtnOnClickHandler"
        android:text="休眠"
        android:padding="10dp"
        android:textSize="25sp" 
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/wifi_line2"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/ll_tool"
        android:layout_alignParentLeft="true"
        android:background="#ff0000" />
	<LinearLayout 
	    android:id="@+id/ll_tool"
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
	    >
	    <Button
	        android:id="@+id/securityGetBackToMain"
	        android:layout_width="0px"
	        android:layout_weight="1"
	        android:layout_height="70dp"
	        android:textSize="20sp"
	        android:gravity="center"
	        android:text="返回 主页" />
	
	    <Button
	        android:id="@+id/test_security"
	        android:layout_width="0px"
	        android:layout_weight="1"
	        android:layout_height="70dp"
	        android:textSize="20sp"
	        android:gravity="center"
	        android:text="测试" />
	
	    <Button
	        android:id="@+id/securityFalse"
	        android:layout_width="0px"
	        android:layout_weight="1"
	        android:layout_height="70dp"
	        android:textSize="20sp"
	        android:gravity="center"
	        android:text="失败"
	         />
	    
	    <Button
	        android:id="@+id/security_test_state"
	        android:layout_width="0px"
	        android:layout_weight="1"
	        android:layout_height="70dp"
	        android:textSize="20sp"
	        android:gravity="center"
	        android:text="通过"
	        android:textColor="#ff0000" />
	    
	</LinearLayout>
    
    <ImageView
        android:id="@+id/security_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
     
        android:src="@drawable/lucency" />

</RelativeLayout>