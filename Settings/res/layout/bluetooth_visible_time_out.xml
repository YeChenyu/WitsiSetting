<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    style="@style/base_layout"
    >
    
    <RadioGroup 
        android:id="@+id/gruop"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RadioButton
	        android:id="@+id/minute2"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="2分钟"
	        android:textSize="25sp"
	        android:padding="15dp"
	        android:textColor="@color/black"
	        android:checked="true"
	        android:background="@drawable/block_top_selector"
	        />
		<RadioButton
	        android:id="@+id/minute5"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="5分钟"
	        android:textSize="25sp"
	        android:padding="15dp"
	        android:textColor="@color/black"
	        android:background="@drawable/block_selector"
	        />
		<RadioButton
	        android:id="@+id/hours"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="1小时"
	        android:textSize="25sp"
	        android:padding="15dp"
	        android:textColor="@color/black"
	        android:background="@drawable/block_selector"
	        />
		<RadioButton
	        android:id="@+id/never"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="永不超时"
	        android:textSize="25sp"
	        android:padding="15dp"
	        android:textColor="@color/black"
	        android:background="@drawable/block_selector"
	        />
		<RadioButton
	        android:id="@+id/bond"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="已配对设备可检测"
	        android:textSize="25sp"
	        android:padding="15dp"
	        android:textColor="@color/black"
	        android:background="@drawable/block_bottom_selector"
	        />
    </RadioGroup>
	
   </LinearLayout>
