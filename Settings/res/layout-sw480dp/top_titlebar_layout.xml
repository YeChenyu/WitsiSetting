<?xml version="1.0" encoding="utf-8"?>
  
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	tools:context=".MainActivity" 
	android:layout_width="fill_parent"
	android:layout_height="@dimen/toolbar_height"
	android:background="@drawable/top_titlebar_shape"
	android:gravity="center_vertical"
	>
	<LinearLayout 
        android:id="@+id/ll_back"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/setting_back_btn_selector"
        android:padding="@dimen/toolbar_padding"
        >
        <ImageView
	        android:src="@drawable/manager_toolbar_black"
	        android:layout_width="@dimen/toolbar_back_size"
	        android:layout_height="@dimen/toolbar_back_size"
	        android:contentDescription="@string/app_name"
	        />
	    <TextView 
	        android:id="@+id/back"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/toolbar_back"
	        android:textSize="@dimen/toolbar_back_text_size"
	        android:textColor="@color/black"
	        />
    </LinearLayout>
    <TextView 
        android:id="@android:id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/toolbar_title_text_size"
        android:text="@string/toolbar_title"
        android:layout_centerInParent="true"
        />
    <com.witsi.views.CheckSwitchButton
	    android:id="@+id/switch_"
	    android:layout_width="wrap_content"
	    android:layout_height="@dimen/toolbar_switch_height"
	    android:layout_alignParentRight="true"
	    android:layout_centerVertical="true"
	    android:background="@color/transport"
	    android:layout_marginRight="@dimen/toolbar_padding"
	    android:visibility="gone"
	    />
</RelativeLayout>
